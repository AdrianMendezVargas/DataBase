<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevoEstudiante">

    <Button
        android:id="@+id/bt_nuevaCarrera"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginTop="209dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="#3DD13F"
        android:onClick="nuevaCarrera"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_cancelar" />

    <EditText
        android:id="@+id/et_mat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="236dp"
        android:ems="10"
        android:hint="Matricula"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_cancelar"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="113dp"
        android:layout_height="45dp"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="74dp"
        android:onClick="Cancelar"
        android:text="Cancelar"
        android:textColor="#3DD13F"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_guardar"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="106dp"
        android:layout_height="45dp"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="74dp"
        android:onClick="guardar"
        android:text="Guardar"
        android:textColor="#3DD13F"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/sp_opcionesCarreras"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintEnd_toStartOf="@+id/bt_nuevaCarrera"
        app:layout_constraintTop_toBottomOf="@+id/et_mat" />

</androidx.constraintlayout.widget.ConstraintLayout>